{
  "expo": {
    "name": "FaithLinks",
    "slug": "faithlinks",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "light",

    "icon": "./assets/icon.png",

    "ios": {
      "bundleIdentifier": "org.dailylectio.faithlinks",
      "supportsTablet": true
    },
    "android": {
      "package": "org.dailylectio.faithlinks",
      "versionCode": 1,
      "edgeToEdgeEnabled": true,
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": []
    },
    "web": { "favicon": "./assets/favicon.png" },

    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    }
  }
}
