{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://dailylectio.org/schemas/devotion.schema.json",
  "title": "Daily Devotions",
  "type": "array",
  "minItems": 1,
  "items": { "$ref": "#/$defs/devotion" },

  "$defs": {
    "devotion": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "date",
        "quote",
        "quoteCitation",
        "firstReading",
        "psalmSummary",
        "gospelSummary",
        "dailyPrayer",
        "theologicalSynthesis",
        "exegesis",
        "usccbLink",
        "cycle",
        "weekdayCycle",
        "feast",
        "gospelReference",
        "firstReadingRef",
        "psalmRef",
        "gospelRef",
        "lectionaryKey"
      ],
      "properties": {
        "date":            { "type": "string", "pattern": "^\\d{4}-\\d{2}-\\d{2}$" },
        "quote":           { "type": "string", "minLength": 1 },
        "quoteCitation":   { "type": "string", "minLength": 1 },
        "firstReading":    { "type": "string", "minLength": 1 },
        "psalmSummary":    { "type": "string", "minLength": 1 },
        "gospelSummary":   { "type": "string", "minLength": 1 },
        "saintReflection": { "type": "string" },
        "dailyPrayer":     { "type": "string", "minLength": 1 },
        "theologicalSynthesis": { "type": "string", "minLength": 1 },
        "exegesis":        { "type": "string", "minLength": 1 },

        "secondReading":   { "type": ["string","null"] },
        "tags":            { "type": "array", "items": { "type": "string" }, "uniqueItems": true },

        "usccbLink":       { "type": "string", "format": "uri" },
        "cycle":           { "type": "string", "pattern": "^Year [ABC]$" },
        "weekdayCycle":    { "type": "string", "pattern": "^Cycle [IV]$" },
        "feast":           { "type": "string" },

        "gospelReference": { "type": "string" },
        "firstReadingRef": { "type": "string" },
        "secondReadingRef":{ "type": ["string","null"] },
        "psalmRef":        { "type": "string" },
        "gospelRef":       { "type": "string" },
        "lectionaryKey":   { "type": "string" }
      }
    }
  }
}