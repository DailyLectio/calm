{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Daily Devotion",
  "type": "object",
  "required": [
    "date",
    "quote",
    "quoteCitation",
    "firstReading",
    "psalmSummary",
    "gospelSummary",
    "saintReflection",
    "theologicalSynthesis",
    "exegesis",
    "dailyPrayer",
    "usccbLink",
    "tags",
    "cycle",
    "weekdayCycle",
    "feast",
    "gospelReference"
  ],
  "properties": {
    "date": { "type": "string", "pattern": "^\\d{4}-\\d{2}-\\d{2}$" },
    "quote": { "type": "string", "minLength": 10 },
    "quoteCitation": { "type": "string", "minLength": 2 },

    "firstReading": { "type": "string", "minLength": 30 },
    "secondReading": { "type": ["string","null"] },
    "psalmSummary": { "type": "string", "minLength": 20 },
    "gospelSummary": { "type": "string", "minLength": 30 },

    "saintReflection": { "type": "string", "minLength": 30 },
    "theologicalSynthesis": { "type": "string", "minLength": 60 },
    "exegesis": { "type": "string", "minLength": 200 },
    "dailyPrayer": { "type": "string", "minLength": 40 },

    "usccbLink": { "type": "string", "format": "uri" },
    "readingsLink": { "type": "string", "format": "uri" },

    "tags": {
      "type": "array",
      "items": { "type": "string", "minLength": 2, "maxLength": 30 },
      "minItems": 1,
      "maxItems": 20
    },

    "cycle": { "type": "string", "enum": ["A","B","C","Year A","Year B","Year C"] },
    "weekdayCycle": { "type": "string", "enum": ["1","2","I","II","Cycle I","Cycle II"] },

    "feast": { "type": "string", "minLength": 3 },
    "gospelReference": { "type": "string", "minLength": 3 },

    "firstReadingRef": { "type": "string" },
    "secondReadingRef": { "type": ["string","null"] },
    "psalmRef": { "type": "string" },
    "gospelRef": { "type": "string" },

    "lectionaryKey": { "type": "string" }
  },
  "additionalProperties": true
}
