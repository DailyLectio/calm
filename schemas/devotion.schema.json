{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://your-domain/schemas/devotion.schema.json",
  "title": "Daily Devotion",
  "type": "object",
  "required": [
    "date",
    "quote",
    "quoteCitation",
    "firstReading",
    "psalmSummary",
    "gospelSummary",
    "saintReflection",
    "theologicalSynthesis",
    "exegesis",
    "dailyPrayer",
    "usccbLink",
    "tags",
    "cycle",
    "weekdayCycle",
    "feast",
    "gospelReference"
  ],
  "properties": {
    "date": { "type": "string", "format": "date" },
    "slug": { "type": "string" },
    "weekday": { "type": "string" },

    "quote": { "type": "string", "minLength": 1 },
    "quoteCitation": { "type": "string", "minLength": 1 },

    "firstReading": { "type": "string", "minLength": 30 },
    "psalmSummary": { "type": "string", "minLength": 30 },
    "gospelSummary": { "type": "string", "minLength": 30 },

    "saintReflection": { "type": "string", "minLength": 50 },
    "theologicalSynthesis": { "type": "string", "minLength": 50 },

    "exegesis": { "type": "string", "minLength": 200 },
    "exegesisDetail": {
      "type": "object",
      "properties": {
        "firstReading": { "type": "array", "items": { "type": "string" } },
        "psalm":         { "type": "array", "items": { "type": "string" } },
        "gospel":        { "type": "array", "items": { "type": "string" } },
        "saint":         { "type": "array", "items": { "type": "string" } }
        "sourcesLink": { "type": "string", "format": "uri" },
        "lectionarySignature": { "type": "string" },
        "relatedDates": { "type": "array", "items": { "type": "string", "format": "date" } }

      },
      "additionalProperties": true
    },

    "dailyPrayer": { "type": "string", "minLength": 50 },

    "usccbLink": { "type": "string", "format": "uri" },

    "tags": {
      "type": "array",
      "items": { "type": "string", "minLength": 2, "maxLength": 30 },
      "minItems": 1,
      "uniqueItems": true
    },

    "cycle": { "type": "string", "enum": ["A", "B", "C"] },
    "weekdayCycle": { "type": "string", "enum": ["I", "II"] },
    "feast": { "type": "string" },

    "gospelReference": { "type": "string" },
    "firstReadingRef": { "type": "string", "default": "" },
    "secondReadingRef": { "type": "string", "default": "" },
    "psalmRef": { "type": "string", "default": "" },
    "gospelRef": { "type": "string" },

    "lectionaryKey": { "type": "string", "pattern": "^[0-9]{6}$" },

    "readings": {
      "type": "object",
      "properties": {
        "first_reading": { "type": "string" },
        "psalm": { "type": "string" },
        "gospel": { "type": "string" }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": true
}