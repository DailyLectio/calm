{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Devotions JSON Array",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "date":               { "type": "string" },
      "quote":              { "type": "string" },
      "quoteCitation":      { "type": "string" },
      "firstReading":       { "type": "string" },
      "secondReading":       { "type": "string" },
      "psalmSummary":       { "type": "string" },
      "gospelSummary":      { "type": "string" },
      "dailyPrayer":        { "type": "string" },
      "saintReflection":    { "type": "string" },
      "theologicalSynthesis": { "type": "string" }
    },
    "required": [
      "date",
      "quote",
      "quoteCitation",
      "firstReading",
      "secondReading",
      "psalmSummary",
      "gospelSummary",
      "dailyPrayer",
      "saintReflection",
      "theologicalSynthesis"
    ],
    "additionalProperties": false
  }
}