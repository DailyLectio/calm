{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Daily Devotion",
  "type": "object",
  "additionalProperties": true,
  "required": [
    "date",
    "quote",
    "quoteCitation",
    "firstReading",
    "psalmSummary",
    "gospelSummary",
    "saintReflection",
    "theologicalSynthesis",
    "exegesis",
    "dailyPrayer",
    "usccbLink",
    "tags",
    "cycle",
    "weekdayCycle",
    "feast",
    "gospelReference"
  ],
  "properties": {
    "date": { "type": "string", "format": "date" },
    "quote": { "type": "string" },
    "quoteCitation": { "type": "string" },

    "firstReading": { "type": "string" },
    "psalmSummary": { "type": "string" },
    "gospelSummary": { "type": "string" },
    "saintReflection": { "type": "string" },
    "theologicalSynthesis": { "type": "string" },

    "exegesis": { "type": "string" },
    "exegesisDetail": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "firstReading": { "type": "array", "items": { "type": "string" } },
        "psalm":        { "type": "array", "items": { "type": "string" } },
        "gospel":       { "type": "array", "items": { "type": "string" } },
        "saint":        { "type": "array", "items": { "type": "string" } }
      }
    },

    "dailyPrayer": { "type": "string" },

    "usccbLink":   { "type": "string", "format": "uri" },
    "sourcesLink": { "type": "string", "format": "uri" },

    "tags": { "type": "array", "items": { "type": "string" } },

    "cycle": { "type": "string", "enum": ["A", "B", "C"] },
    "weekdayCycle": { "type": "string", "enum": ["I", "II"] },

    "feast": { "type": "string" },

    "gospelReference": { "type": "string" },

    "firstReadingRef":  { "type": "string" },
    "secondReadingRef": { "type": "string" },
    "psalmRef":         { "type": "string" },
    "gospelRef":        { "type": "string" },

    "lectionaryKey":        { "type": "string" },
    "lectionarySignature":  { "type": "string" },
    "relatedDates": { "type": "array", "items": { "type": "string", "format": "date" } }
  }
}
